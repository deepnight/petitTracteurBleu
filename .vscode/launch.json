    "version": "0.2.0",
    "configurations": [
        {
            "name": "HL debug",
            "request": "launch",
            "type": "hl",
            "hxml": "build.dev.hxml",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "HL debug"
        },
        {
            "name": "Chrome JS debug",
            "request": "launch",
            "type": "chrome",
            "file": "${workspaceFolder}/js.html",
            "preLaunchTask": "JS debug"
        },
        {
            "name": "Firefox JS debug",
            "request": "launch",
            "type": "firefox",
            "file": "${workspaceFolder}/js.html",
            "preLaunchTask": "JS debug"
        }
    ]
}